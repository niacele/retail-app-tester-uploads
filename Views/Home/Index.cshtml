@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Hero Carousel -->
    <div id="heroCarousel" class="carousel slide hero-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/promo-images/20.png" class="carousel-image" alt="SkinShelf Skincare Products">
                <div class="carousel-caption">
                    <h2>Welcome to SkinShelf Skincare</h2>
                    <p>Discover our premium collection of natural skincare products</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/promo-images/21.png" class="carousel-image" alt="Special Offers">
                <div class="carousel-caption">
                    <h2>Special Offers</h2>
                    <p>Enjoy 15% off on your first order with code WELCOME15</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/promo-images/22.png" class="carousel-image" alt="New Arrivals">
                <div class="carousel-caption">
                    <h2>New Arrivals</h2>
                    <p>Check out our latest products for the season</p>
                </div>
            </div>
            <div class="carousel-item">
            <img src="/promo-images/23.png" class="carousel-image" alt="New Arrivals">
            <div class="carousel-caption">
                <h2>New Arrivals</h2>
                <p>Check out our latest products for the season</p>
            </div>
        </div>
        <div class="carousel-item">
        <img src="/promo-images/24.png" class="carousel-image" alt="New Arrivals">
        <div class="carousel-caption">
            <h2>New Arrivals</h2>
            <p>Check out our latest products for the season</p>
        </div>
    </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span> 
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3>Join Loyalty Program</h3>
                    <p>Sign up for our loyalty program and earn points with every purchase</p>
                    <a asp-controller="Customers" asp-action="Create" class="btn-action">Join Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h3>Browse Products</h3>
                    <p>Explore our complete collection of skincare products</p>
                    <a asp-controller="Products" asp-action="Index" class="btn-action">Shop Now</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="action-card">
                    <div class="action-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <h3>View Order History</h3>
                    <p>Check your previous orders and track current orders</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn-action">View Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>