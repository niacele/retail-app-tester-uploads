@model IEnumerable<retail_app_tester.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="fw-bold" style="color: var(--dark-brown);">Customers</h1>
                    <p class="text-muted">Manage your customer database</p>
                </div>
                <a asp-action="Create" class="btn btn-primary" style="background-color: var(--terracotta); border-color: var(--terracotta);">
                    <i class="fas fa-user-plus me-2"></i>Add New Customer
                </a>
            </div>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="card shadow-sm">
        <div class="card-header" style="background-color: var(--off-white); border-bottom: 2px solid var(--beige);">
            <h5 class="mb-0" style="color: var(--dark-brown);">
                <i class="fas fa-users me-2"></i>Customer List
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: var(--beige);">
                        <tr>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Name
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Email
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Phone
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Address
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown); text-align: center;">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="border-bottom: 1px solid var(--beige);">
                                <td style="padding: 15px; color: var(--dark-brown); font-weight: 500;">
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td style="padding: 15px; color: var(--medium-brown);">
                                    @Html.DisplayFor(modelItem => item.CustomerEmail)
                                </td>
                                <td style="padding: 15px; color: var(--medium-brown);">
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td style="padding: 15px; color: var(--medium-brown); max-width: 200px;">
                                    <span class="text-truncate d-inline-block" style="max-width: 180px;"
                                          title="@item.ShippingAddress">
                                        @Html.DisplayFor(modelItem => item.ShippingAddress)
                                    </span>
                                </td>
                                <td style="padding: 15px; text-align: center;">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-primary"
                                           style="border-color: var(--terracotta); color: var(--terracotta);">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-secondary"
                                           style="border-color: var(--medium-brown); color: var(--medium-brown);">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5 mt-4">
            <div class="empty-state" style="background-color: var(--off-white); border-radius: 10px; padding: 40px;">
                <i class="fas fa-users fa-3x mb-3" style="color: var(--beige);"></i>
                <h4 style="color: var(--dark-brown);">No Customers Yet</h4>
                <p style="color: var(--medium-brown);">Get started by adding your first customer!</p>
                <a asp-action="Create" class="btn btn-primary mt-2" style="background-color: var(--terracotta); border-color: var(--terracotta);">
                    <i class="fas fa-user-plus me-2"></i>Add First Customer
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* Custom Styles */
    .card {
        border: 1px solid var(--beige);
        border-radius: 8px;
    }

    .table-hover tbody tr:hover {
        background-color: var(--off-white);
    }

    .btn-primary {
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background-color: var(--light-brown);
            border-color: var(--light-brown);
            transform: translateY(-1px);
        }

    .btn-outline-primary:hover {
        background-color: var(--terracotta);
        border-color: var(--terracotta);
        color: white !important;
    }

    .btn-outline-secondary:hover {
        background-color: var(--medium-brown);
        border-color: var(--medium-brown);
        color: white !important;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .empty-state {
        border: 1px solid var(--beige);
    }

    /* Ensure text truncation works */
    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

@section Scripts {
    <script>
        // Add simple hover effects
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-1px)';
            });

            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
}
