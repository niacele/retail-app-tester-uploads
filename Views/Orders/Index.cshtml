@model IEnumerable<retail_app_tester.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="fw-bold" style="color: var(--dark-brown);">Your Orders</h1>
                    <p class="text-muted">View and manage your order history</p>
                </div>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary" style="background-color: var(--terracotta); border-color: var(--terracotta);">
                    <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: var(--off-white); border-bottom: 2px solid var(--beige);">
            <h5 class="mb-0" style="color: var(--dark-brown);">
                <i class="fas fa-receipt me-2"></i>Order History
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background-color: var(--beige);">
                        <tr>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Order #
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Customer
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Order Date
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown);">
                                Total Amount
                            </th>
                            <th style="color: var(--dark-brown); padding: 15px; border-bottom: 2px solid var(--light-brown); text-align: center;">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="border-bottom: 1px solid var(--beige);">
                                <td style="padding: 15px; color: var(--dark-brown); font-weight: 500;">
                                    <strong>@item.RowKey</strong>
                                </td>
                                <td style="padding: 15px; color: var(--medium-brown);">
                                    @if (!string.IsNullOrEmpty(item.CustomerRowKey) && ViewBag.CustomerNames != null)
                                    {
                                        @ViewBag.CustomerNames[item.CustomerRowKey]
                                    }
                                    else
                                    {
                                        <span class="text-muted">No customer assigned</span>
                                    }
                                </td>
                                <td style="padding: 15px; color: var(--medium-brown);">
                                    <i class="fas fa-calendar me-2" style="color: var(--terracotta);"></i>
                                    @item.OrderDate.ToString("yyyy-MM-dd")
                                </td>
                                <td style="padding: 15px; color: var(--dark-brown); font-weight: 600;">
                                    @item.OrderTotal.ToString("C")
                                </td>
                                <td style="padding: 15px; text-align: center;">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="OrderConfirmation" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-primary"
                                           style="border-color: var(--terracotta); color: var(--terracotta);">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-secondary"
                                           style="border-color: var(--medium-brown); color: var(--medium-brown);">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.RowKey"
                                           class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 mt-4">
            <div class="empty-state" style="background-color: var(--off-white); border-radius: 10px; padding: 40px; border: 1px solid var(--beige);">
                <i class="fas fa-shopping-bag fa-3x mb-3" style="color: var(--beige);"></i>
                <h4 style="color: var(--dark-brown);">No Orders Yet</h4>
                <p style="color: var(--medium-brown);">You haven't placed any orders yet.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-2" style="background-color: var(--terracotta); border-color: var(--terracotta);">
                    <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* Custom Styles */
    .card {
        border: 1px solid var(--beige);
        border-radius: 8px;
    }

    .table-hover tbody tr:hover {
        background-color: var(--off-white);
    }

    .btn-primary {
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background-color: var(--light-brown);
            border-color: var(--light-brown);
            transform: translateY(-1px);
        }

    .btn-outline-primary:hover {
        background-color: var(--terracotta);
        border-color: var(--terracotta);
        color: white !important;
    }

    .btn-outline-secondary:hover {
        background-color: var(--medium-brown);
        border-color: var(--medium-brown);
        color: white !important;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .empty-state {
        border: 1px solid var(--beige);
    }

    td strong {
        color: var(--terracotta);
    }
</style>

@section Scripts {
    <script>
        
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-1px)';
            });

            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
}